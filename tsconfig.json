{
    "compilerOptions": {
      "target": "ES2020",                     
      "module": "commonjs",                   
      "rootDir": "./src",                     
      "outDir": "./dist",                     
      "strict": true,                         
      "esModuleInterop": true,                 
      "skipLibCheck": true,                    
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",              
      "resolveJsonModule": true,               
      "sourceMap": true ,
      "typeRoots": ["./node_modules/@types", "./src/types"]                       
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": ["node_modules", "dist"]
  }
  